{% extends 'layout' %}

{% block contents %}
    <div class="row">
        <div class="col-md-12">
			<div class="table-responsive" id="routes">
				{% for mountain in mountains %}
					<table class="table">
  						<col width="50%">
						<col width="50%">
						<thead>
							<tr><th colspan="2">{{mountain.name}}</th></tr>
						</thead>
						<tbody>
						{% filter make_two_columns(mountain.routes) %}
							<td data-ref="{{id}}"><a href="view/{{id}}">{{title}}</a></td>
						{% endfilter %}	
						</tbody>
  					</table>
				{% endfor %}
				</div> 
            </div>
        </div>
    </div>
   
{% endblock %}

